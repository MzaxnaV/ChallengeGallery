{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "zig build",
            "problemMatcher": [
                "$zig"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "build Release",
            "type": "shell",
            "command": "zig build -Doptimize=ReleaseSafe",
            "problemMatcher": [
                "$zig"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build-web",
            "type": "shell",
            "command": "zig build -Dtarget=wasm64-emscripten --sysroot \"%EMSDK%/upstream/emscripten\"",
            "problemMatcher": [
                "$zig"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}